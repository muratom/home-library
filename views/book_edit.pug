doctype html
html
    head
        meta(charset="utf-8")
        title= `Редактирование книги`
        link(rel='stylesheet', href='/styles/book_edit.css')
    body
        include header.pug
        form(method="post", action=`/books/${book.id}/update`)
            p
                b Название:
                |
                |
                input(type="text", name="title", value=book.title)
            p
                b Автор:
                |
                |
                input(type="text", name="author", value=book.author)
            p
                b Год публикации:
                |
                |
                input(type="text", name="published", value=book.published)
            p
                b URL обложки:
                |
                |
                input(type="text", name="coverUrl", value=book.coverUrl === null ? "" : book.coverUrl)
            if book.isInStock
                p.inStock= "В наличии"
            else
                p.notInStock= `Взял ${book.whoTook} (должен вернуть ${book.whenMustReturn})`
            p
                input.buttons(type="submit", value="Закончить редактирование")


