doctype html
html
    head
        meta(charset="utf-8")
        title= `Редактирование книги`
        link(rel='stylesheet', href='/styles/book_edit.css')
    body
        include header.pug
        form(method="post", action=`/books/${book.id}/update`)
            p
                input(type="submit", value="Закончить редактирование")
            p
                b Название:
                |
                |
                input(type="text", name="title", placeholder=book.title)
            p
                b Автор:
                |
                |
                input(type="text", name="author", placeholder=book.author)
            p
                b Год публикации:
                |
                |
                input(type="text", name="published", placeholder=book.published)
            p
                =book.isInStock ? "В наличии" : `Взял ${book.whoTook} (должен вернуть ${book.whenMustReturn})`


