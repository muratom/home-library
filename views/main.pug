doctype html
html
    head
        meta(charset="utf-8")
        title Home library
        link(rel='stylesheet', href='/styles/main.css')
    body
        include header.pug
        section
            ul
                each book in books
                  li
                    a(href="/books/" + book.id)
                      =`${book.id}: ${book.title} (${book.author})`
