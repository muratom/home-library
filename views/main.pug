doctype html
html
    head
        meta(charset="utf-8")
        title Home library
        link(rel='stylesheet', href='/styles/main.css')
        link(rel='stylesheet', href='/styles/book_list.css')
        script(src="ajax.js")
    body
        include header.pug
        p
            section
                p
                    form(method="get", action="/")
                        input.buttons(type="submit", value="Выйти")
                div.edit_buttons
                    form(method="get", action="/books/add_book")
                        input.buttons(type="submit", value="Добавить книгу")
                    form(method="get", action="/books/delete_book")
                        input.buttons(type="submit", value="Удалить книгу")
        p
            form(action="")
                select(id="filter_type", onchange="httpPost(this.options[this.selectedIndex].value);")
                    option(value="#") Выберите тип фильтрации
                    option(value="all") Вывести все
                    option(value="by_title") По названию
                    option(value="by_stock") Только в наличии
                    option(value="by_return_date") По возрастанию времени возврата
        section#book_list
            include book_list
